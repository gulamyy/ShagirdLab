let score=0, wrong=0;
const cardsContainer = document.getElementById("cards");
const scoreBoard = document.getElementById("score");
const overlay = document.getElementById("overlay");

function getRandomPeople() {
  const shuffled = [...butunSaxsiyyetler].sort(()=>Math.random()-0.5);
  return shuffled.slice(0,9);
}

let saxsiyyetler = getRandomPeople();

function renderCards() {
  cardsContainer.innerHTML="";
  saxsiyyetler.forEach((s,i)=>{
    const card = document.createElement("div");
    card.className="card";
    card.draggable=true;
    card.dataset.index=i;
    card.innerHTML=`
      <div class="card-inner">
        <div class="card-front"><img src="${s.img}" alt=""></div>
        <div class="card-back"><div>${s.ad}</div>${s.info}</div>
      </div>
    `;
    card.addEventListener("click",()=>card.classList.toggle("flipped"));
    card.addEventListener("touchstart", e=>{ draggedItem=card; });
    card.addEventListener("dragstart", e=>{ draggedItem=card; });
    cardsContainer.appendChild(card);
  });
}

let draggedItem=null;

function showOverlay(correct=true){
  overlay.textContent = correct ? "✔" : "✖";
  overlay.className = `overlay-msg ${correct?"correct":"wrong"} show`;
  setTimeout(()=>{ overlay.className="overlay-msg"; },1000);
}

document.querySelectorAll(".imperial-card").forEach(zone=>{
  zone.addEventListener("dragover", e=>e.preventDefault());
  zone.addEventListener("drop", e=>{
    if(!draggedItem) return;
    const imperiya = zone.dataset.imperiya;
    const index = draggedItem.dataset.index;
    const s = saxsiyyetler[index];
    if(s.imperiya===imperiya){ score++; showOverlay(true); }
    else { wrong++; showOverlay(false); }
    draggedItem.draggable=false;
    draggedItem.style.pointerEvents="none";
    updateScore(); draggedItem=null;
  });
  zone.addEventListener("touchend", e=>{
    if(!draggedItem)return;
    const rect=zone.getBoundingClientRect();
    const touch=e.changedTouches[0];
    if(touch.clientX>rect.left && touch.clientX<rect.right && touch.clientY>rect.top && touch.clientY<rect.bottom){
      const imperiya=zone.dataset.imperiya;
      const index=draggedItem.dataset.index;
      const s=saxsiyyetler[index];
      if(s.imperiya===imperiya){ score++; showOverlay(true); }
      else { wrong++; showOverlay(false); }
      draggedItem.draggable=false;
      draggedItem.style.pointerEvents="none";
      updateScore();
    }
    draggedItem=null;
  });
});

function updateScore(){ scoreBoard.textContent=`Xal: ${score} / Səhv: ${wrong}`; }

document.getElementById("restart").addEventListener("click", ()=>{
  score=0; wrong=0;
  saxsiyyetler = getRandomPeople();
  renderCards();
  updateScore();
});

renderCards();
</script>
